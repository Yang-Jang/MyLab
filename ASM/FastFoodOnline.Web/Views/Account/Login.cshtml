@model FastFoodOnline.Web.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_AuthLayout";
}


@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

<div class="sf-auth-wrap">
    <div class="container sf-container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-5">

                <div class="sf-auth-card">
                    <div class="sf-auth-head">
                        <div class="sf-auth-badge">
                            <i class="fa-solid fa-bowl-food"></i>
                        </div>
                        <div>
                            <h1 class="sf-auth-title">Đăng nhập</h1>
                            <div class="sf-auth-subtitle">Chào mừng bạn quay lại • Đặt món nhanh như ShopeeFood</div>
                        </div>
                    </div>

                    <form asp-action="Login" method="post" class="mt-3" autocomplete="on">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                        <div class="sf-field">
                            <label asp-for="Email" class="sf-label">Email</label>
                            <div class="sf-input-group">
                                <i class="fa-regular fa-envelope sf-input-icon"></i>
                                <input asp-for="Email" class="form-control sf-input" placeholder="name@example.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="sf-field">
                            <label asp-for="Password" class="sf-label">Mật khẩu</label>
                            <div class="sf-input-group">
                                <i class="fa-solid fa-lock sf-input-icon"></i>
                                <input asp-for="Password" type="password" class="form-control sf-input" placeholder="Nhập mật khẩu" />
                                <button class="btn sf-eye" type="button" id="togglePwd" aria-label="Hiện/ẩn mật khẩu">
                                    <i class="fa-regular fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex align-items-center justify-content-between mt-2">
                            <div class="form-check sf-check">
                                <input class="form-check-input" asp-for="RememberMe" />
                                <label class="form-check-label" asp-for="RememberMe">Ghi nhớ đăng nhập</label>
                            </div>

                            <a class="sf-link" asp-action="ForgotPassword">Quên mật khẩu?</a>
                        </div>

                        <button type="submit" class="btn sf-btn-primary w-100 mt-3">
                            Đăng nhập
                        </button>
                    </form>

                    <div class="sf-divider-line">
                        <span>hoặc</span>
                    </div>

                    <!-- Google login: ĐỂ RIÊNG FORM (đúng chuẩn, không dính form Login) -->
                    <form asp-action="ExternalLogin" method="post" class="mt-2">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn sf-btn-google w-100" name="provider" value="Google">
                            <i class="fab fa-google me-2"></i>Đăng nhập bằng Google
                        </button>
                    </form>

                    <div class="sf-auth-foot">
                        Chưa có tài khoản?
                        <a class="sf-link fw-semibold" asp-action="Register">Đăng ký ngay</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const btn = document.getElementById('togglePwd');
            const input = document.querySelector('input[name="Password"]');
            if (!btn || !input) return;

            btn.addEventListener('click', () => {
                const isPwd = input.getAttribute('type') === 'password';
                input.setAttribute('type', isPwd ? 'text' : 'password');
                btn.innerHTML = isPwd ? '<i class="fa-regular fa-eye-slash"></i>' : '<i class="fa-regular fa-eye"></i>';
            });
        })();
    </script>
}
