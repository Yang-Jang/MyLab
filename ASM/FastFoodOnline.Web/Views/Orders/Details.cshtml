@model FastFoodOnline.Web.Models.Order
@{
    ViewData["Title"] = "Order Details";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Order Details <small class="text-muted">#@Model.Code</small></h2>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to History</a>
    </div>

    <!-- Tracking Timeline -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-4">
            <h5 class="mb-4">Order Status: <span class="text-primary-custom">@Model.OrderStatus</span></h5>
            <div class="position-relative m-4">
                <div class="progress" style="height: 2px;">
                    <div class="progress-bar" role="progressbar" style="width: @(Model.OrderStatus == "Pending" ? "25%" : Model.OrderStatus == "Preparing" ? "50%" : Model.OrderStatus == "Delivering" ? "75%" : "100%");" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <button type="button" class="position-absolute top-0 start-0 translate-middle btn btn-sm btn-primary rounded-pill" style="width: 2rem; height:2rem;">1</button>
                <div class="position-absolute top-0 start-0 translate-middle mt-4 text-center" style="width: 100px; margin-left: 0px;"><small>Pending</small></div>
                
                <button type="button" class="position-absolute top-0 start-25 translate-middle btn btn-sm @(Model.OrderStatus != "Pending" ? "btn-primary" : "btn-secondary") rounded-pill" style="width: 2rem; height:2rem; left: 25%;">2</button>
                
                <button type="button" class="position-absolute top-0 start-50 translate-middle btn btn-sm @(Model.OrderStatus == "Preparing" || Model.OrderStatus == "Delivering" || Model.OrderStatus == "Delivered" ? "btn-primary" : "btn-secondary") rounded-pill" style="width: 2rem; height:2rem; left: 50%;">3</button>
                <div class="position-absolute top-0 start-50 translate-middle mt-4 text-center" style="width: 100px; left: 50%;"><small>Preparing</small></div>

                <button type="button" class="position-absolute top-0 start-75 translate-middle btn btn-sm @(Model.OrderStatus == "Delivering" || Model.OrderStatus == "Delivered" ? "btn-primary" : "btn-secondary") rounded-pill" style="width: 2rem; height:2rem; left: 75%;">4</button>
                <div class="position-absolute top-0 start-75 translate-middle mt-4 text-center" style="width: 100px; left: 75%;"><small>Delivering</small></div>

                <button type="button" class="position-absolute top-0 start-100 translate-middle btn btn-sm @(Model.OrderStatus == "Delivered" ? "btn-primary" : "btn-secondary") rounded-pill" style="width: 2rem; height:2rem; left: 100%;">5</button>
                <div class="position-absolute top-0 start-100 translate-middle mt-4 text-center" style="width: 100px; left: 100%;"><small>Delivered</small></div>
            </div>
            <br />
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Items</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var item in Model.OrderItems)
                        {
                            <li class="list-group-item d-flex justify-content-between">
                                <div>
                                    <h6 class="my-0">
                                        @if(item.Food != null) { @item.Food.Name } else { @item.Combo.Name }
                                    </h6>
                                    <small class="text-muted">Quantity: @item.Quantity x @item.UnitPrice.ToString("N0") đ</small>
                                </div>
                                <span class="text-muted">@item.LineTotal.ToString("N0") đ</span>
                            </li>
                        }
                    </ul>
                </div>
                <div class="card-footer bg-white d-flex justify-content-between p-3">
                    <span class="fs-5 fw-bold">Total</span>
                    <span class="fs-5 fw-bold text-primary-custom">@Model.TotalAmount.ToString("N0") đ</span>
                </div>
            </div>
        </div>
        <div class="col-md-4">
             <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Delivery Details</h5>
                </div>
                <div class="card-body">
                    <p><strong>Receiver:</strong> @Model.FullName</p>
                    <p><strong>Phone:</strong> @Model.Phone</p>
                    <p><strong>Address:</strong> @Model.Address</p>
                    <hr/>
                    <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
                    <p><strong>Payment Status:</strong> @Model.PaymentStatus</p>
                </div>
            </div>
        </div>
    </div>
</div>
