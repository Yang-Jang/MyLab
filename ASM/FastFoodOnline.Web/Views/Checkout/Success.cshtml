@model FastFoodOnline.Web.Models.Order
@{
    ViewData["Title"] = "Order Success";
}

<div class="text-center py-5">
    <div class="mb-4">
        <i class="fas fa-check-circle text-success fa-5x"></i>
    </div>
    <h1 class="display-4 fw-bold text-success mb-3">Thank You!</h1>
    <h3 class="mb-4">Your order has been placed successfully.</h3>
    
    <div class="card d-inline-block text-start p-4 shadow-sm border-0 mb-5" style="max-width: 500px;">
        <p><strong>Order Number:</strong> #@Model.Code</p>
        <p><strong>Total Amount:</strong> <span class="text-danger fw-bold">@Model.TotalAmount.ToString("N0") Ä‘</span></p>
        <p><strong>Payment Method:</strong> @Model.PaymentMethod (@Model.PaymentStatus)</p>
        <p class="mb-0">You will receive an email confirmation shortly.</p>
    </div>
    
    <div>
        <a asp-controller="Orders" asp-action="Index" class="btn btn-primary rounded-pill px-4 me-2">Track Order</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Continue Shopping</a>
    </div>
</div>
