@using Microsoft.AspNetCore.Identity
@model IEnumerable<ApplicationUser>

<h2>Danh sách Người dùng</h2>

@if (Model.Any())
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Email</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-controller="Administration" asp-action="ManageUserRoles" asp-route-userId="@user.Id" class="btn btn-warning btn-sm">Phân quyền</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Chưa có user nào.</p>
}