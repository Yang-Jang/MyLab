@model Bai1.Models.Product

@{ ViewData["Title"] = "Chi tiết sản phẩm"; }

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-white text-center pt-4 border-0">
                <div class="d-inline-flex justify-content-center align-items-center bg-mint-light rounded-circle mb-3" style="width: 70px; height: 70px;">
                    <i class="fa-solid fa-circle-info fa-2x text-mint"></i>
                </div>
                <h3 class="fw-bold text-dark">Thông tin sản phẩm</h3>
            </div>

            <div class="card-body px-5 pb-5">
                <div class="mb-3 border-bottom pb-2">
                    <label class="small text-muted fw-bold">TÊN SẢN PHẨM</label>
                    <p class="fs-5 fw-bold text-dark">@Model.Name</p>
                </div>

                <div class="mb-3 border-bottom pb-2">
                    <label class="small text-muted fw-bold">GIÁ BÁN</label>
                    <p class="fs-5 fw-bold text-success">@Model.Price.ToString("#,##0") VNĐ</p>
                </div>

                <div class="mb-4">
                    <label class="small text-muted fw-bold">NGƯỜI TẠO</label>
                    <div class="d-flex align-items-center mt-1">
                        <div class="bg-mint-light rounded-circle d-flex justify-content-center align-items-center me-2" style="width: 40px; height: 40px;">
                            <i class="fa-solid fa-user text-mint"></i>
                        </div>
                        <div>
                            <div class="fw-bold text-dark">@ViewBag.CreatorName</div>
                            <div class="text-muted small font-monospace" style="font-size: 0.8rem;">
                                ID: @(Model.CreatedBy ?? "N/A")
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-grid">
                    <a asp-action="Index" class="btn btn-primary rounded-pill fw-bold shadow-sm">
                        <i class="fa-solid fa-arrow-left me-2"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>