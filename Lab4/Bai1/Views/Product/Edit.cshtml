@model Bai1.Models.Product

@{ ViewData["Title"] = "Cập nhật sản phẩm"; }

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-white text-center pt-4 border-0">
                <div class="d-inline-flex justify-content-center align-items-center bg-mint-light rounded-circle mb-3" style="width: 70px; height: 70px;">
                    <i class="fa-solid fa-pen-to-square fa-2x text-mint"></i>
                </div>
                <h3 class="fw-bold text-dark">Cập nhật sản phẩm</h3>
            </div>

            <div class="card-body px-4 pb-4">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label class="form-label fw-bold small text-muted ms-2">TÊN SẢN PHẨM</label>
                        <div class="input-group">
                            <span class="input-group-text ps-3"><i class="fa-solid fa-tag"></i></span>
                            <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm..." />
                        </div>
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label class="form-label fw-bold small text-muted ms-2">GIÁ BÁN (VNĐ)</label>
                        <div class="input-group">
                            <span class="input-group-text ps-3"><i class="fa-solid fa-money-bill"></i></span>
                            <input asp-for="Price" type="number" class="form-control" placeholder="Nhập giá tiền..." />
                        </div>
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>
                    
                    <div class="d-flex justify-content-between gap-2">
                        <a asp-action="Index" class="btn btn-light text-muted border w-50 fw-bold rounded-pill">
                            <i class="fa-solid fa-arrow-left me-2"></i> Hủy
                        </a>
                        <button type="submit" class="btn btn-primary w-50 fw-bold rounded-pill shadow-sm">
                            <i class="fa-solid fa-save me-2"></i> Lưu thay đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>