@{ ViewData["Title"] = "Đăng nhập"; }

<div class="row justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-4 col-sm-8">
        <div class="card shadow-lg">
            <div class="card-header text-center pt-4 border-0 bg-white">
                <div class="d-inline-flex justify-content-center align-items-center bg-mint-light rounded-circle mb-3" style="width: 80px; height: 80px;">
                    <i class="fa-solid fa-right-to-bracket fa-2x text-mint"></i>
                </div>
                <h3 class="fw-bold text-dark">Chào mừng trở lại!</h3>
                <p class="text-muted small">Vui lòng đăng nhập để tiếp tục</p>
            </div>
            
            <div class="card-body px-4 pb-5">
                <form method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                    <div asp-validation-summary="All" class="text-danger small mb-3"></div>
                    
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold text-muted small ms-2">EMAIL</label>
                        <div class="input-group">
                            <span class="input-group-text ps-3">
                                <i class="fa-solid fa-envelope"></i>
                            </span>
                            <input name="email" type="email" class="form-control" placeholder="name@example.com" required />
                        </div>
                    </div>
                    
                    <div class="form-group mb-4">
                        <label class="form-label fw-bold text-muted small ms-2">MẬT KHẨU</label>
                        <div class="input-group">
                            <span class="input-group-text ps-3">
                                <i class="fa-solid fa-lock"></i>
                            </span>
                            <input name="password" type="password" class="form-control" placeholder="••••••••" required />
                        </div>
                    </div>
                    
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                            ĐĂNG NHẬP
                        </button>
                    </div>

                    <div class="text-center mt-3">
                        <p class="small text-muted mb-0">Chưa có tài khoản?</p>
                        <a asp-action="Register" class="fw-bold text-decoration-none text-mint">
                            Tạo tài khoản mới ngay
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>